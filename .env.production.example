# Production Environment Configuration
# Branch: main
# URL: uiforge.com

# Node Environment
NODE_ENV=production

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://prod.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=prod_anon_key_placeholder
DATABASE_URL=postgresql://prod_user:prod_pass@localhost:5432/prod_db
SUPABASE_SERVICE_ROLE_KEY=prod_service_key_placeholder

# API Configuration
API_BASE_URL=https://uiforge.com/api
LOG_LEVEL=error

# Feature Flags (stable only)
FEATURE_FLAGS=NEW_AI_MODELS,ADVANCED_COMPONENTS

# Production Settings
ENABLE_DEBUG_TOOLS=false
ENABLE_SOURCE_MAPS=false
ENABLE_HOT_RELOAD=false
ENABLE_MOCK_DATA=false

# Rate Limiting (strict for prod)
API_RATE_LIMIT=100

# Monitoring (enabled and strict)
MONITORING_ENABLED=true
ANALYTICS_ENABLED=true

# Security (strict for prod)
CORS_ORIGIN=https://uiforge.com
ENABLE_DEBUG_ENDPOINTS=false
SKIP_AUTHENTICATION=false

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CDN_URL=https://cdn.uiforge.com