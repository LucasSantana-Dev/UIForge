{
  "name": "@siza/api",
  "version": "0.1.0",
  "private": true,
  "description": "Siza Express API with self-hosted MCP server and Gemini integration",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:mcp": "tsx watch src/mcp/index.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:mcp": "node dist/mcp/index.js",
    "test:mcp": "tsx test-mcp.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "deploy": "wrangler deploy",
    "wrangler:dev": "wrangler dev"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "@google/generative-ai": "^0.21.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@supabase/supabase-js": "^2.95.3",
    "@types/supertest": "^6.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "array-flatten": "1.1.1",
    "express": "^4.21.2",
    "openai": "^4.80.0",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250116.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0",
    "wrangler": "^4.66.0"
  },
  "engines": {
    "node": ">=20"
  }
}
