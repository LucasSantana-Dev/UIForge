{
  "name": "uiforge-webapp",
  "version": "0.2.0",
  "private": true,
  "description": "Zero-cost web application for AI-driven UI generation",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install",
    "deps:unused": "depcheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky",
    "forge-patterns": "node scripts/forge-patterns-cli.js",
    "forge-patterns:list": "node scripts/forge-patterns-cli.js list",
    "forge-patterns:validate": "node scripts/forge-patterns-cli.js validate",
    "forge-patterns:init": "node scripts/forge-patterns-cli.js init",
    "forge-patterns:test": "node scripts/test-forge-patterns.js"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@forgespace/core": "^1.1.5",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.0.0",
    "depcheck": "^1.4.7",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.8.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "wrangler": "^4.65.0"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@monaco-editor/react": "^4.7.0",
    "commander": "^11.0.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.564.0",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.71.1",
    "zod": "^4.3.6"
  }
}
