{
  "name": "@forgespace/webapp",
  "version": "0.2.1",
  "private": true,
  "description": "Forgespace web application for AI-driven UI generation",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "eslint . --ext .js,.ts --fix",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "deps:check": "ncu",
    "deps:update": "ncu -u && npm install",
    "deps:unused": "depcheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install",
    "lint:check": "eslint . --ext .js,.ts,.tsx",
    "validate": "npm run lint:check && npm run format:check && npm run test",
    "pre-commit": "npm run lint && npm run format && npm run test",
    "prepack": "npm run build",
    "validate-patterns": "npm run lint:check && npm run format:check && ./scripts/security/validate-no-secrets.sh",
    "security-scan": "./scripts/security/scan-for-secrets.sh",
    "feature-list": "./scripts/forge-features list"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": ["eslint --fix --max-warnings 0", "prettier --write"],
    "packages/**/*.{js,jsx,ts,tsx}": ["eslint --fix --max-warnings 0", "prettier --write"],
    "*.{json,md,yml,yaml}": ["prettier --write"]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.5.0",
    "depcheck": "^1.4.7",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-check-updates": "^19.3.2",
    "prettier": "^3.0.0",
    "turbo": "^2.8.9",
    "typescript": "^5.1.6",
    "wrangler": "^4.66.0",
    "@types/fs-extra": "^11.0.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0"
  },
  "overrides": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "packageManager": "npm@11.10.0",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@monaco-editor/react": "^4.7.0",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "eslint-config-next": "^16.1.5",
    "lucide-react": "^0.574.0",
    "next-themes": "^0.4.6",
    "react-hook-form": "^7.71.1",
    "zod": "^4.3.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Forge-Space/UI.git"
  },
  "bugs": {
    "url": "https://github.com/Forge-Space/UI/issues"
  },
  "homepage": "https://github.com/Forge-Space/UI#readme"
}
