# Netlify Headers for Asset Optimization

# Cache static assets with long expiration
/logos/*
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache WebP images specifically
/*.webp
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache optimized PNGs
/*-optimized.png
  Cache-Control: public, max-age=31536000, immutable
  X-Content-Type-Options: nosniff

# Cache favicon with shorter duration (may change)
/favicon.ico
  Cache-Control: public, max-age=86400
  X-Content-Type-Options: nosniff

# Enable compression for text assets
/*.html
  Cache-Control: public, max-age=0, must-revalidate
  Content-Encoding: gzip

/*.css
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: gzip

/*.js
  Cache-Control: public, max-age=31536000, immutable
  Content-Encoding: gzip

# Security headers
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()